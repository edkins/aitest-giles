{
    "type": "object",
    "properties": {
        "prompt_templates": {
            "type": "array",
            "item": { "type": "string" }
        },
        "maps": {
            "type": "array",
            "item": { "type": "string" }
        },
        "questions": {
            "type": "array",
            "item": {
                "type": "object",
                "properties": {
                    "prompt_template": {"type": "integer" },
                    "map": {"type": "integer" },
                    "question": {"type": "string" },
                    "response": {"type": "string"},
                    "params": {
                        "type": "object",
                        "properties": {
                            "model": {"type": "string"},
                            "temperature": {"type": "float"},
                            "max_tokens": {"type": "integer"}
                        }
                    },
                    "annotations": {
                        "type": "object",
                        "properties": {
                            "expected_answer": {"type": "string"},
                            "answer_type": {"type": "string"},
                            "importance": {"type": "float"}
                        }
                    }
                },
                "required": ["prompt_template", "map", "question"]
            }
        }
    },
    "grading": {
        "type": "object",
        "properties": {
            "rules": {
                "type": "array",
                "item": {
                    "type": "object",
                    "properties": {
                        "rule_type": { "enum": ["exact_match"] },
                        "exact_match": {
                            "type": "object",
                            "properties": {
                                "answer_type": { "type": "string" },
                                "exact_response": { "type": "string" },
                                "mapped_to": { "type": "string" }
                            }
                        }
                    },
                    "reuqired": "rule_type"
                }
            }
        }
    },
    "required": ["prompt_templates", "maps", "questions"]
}
